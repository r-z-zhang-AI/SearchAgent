/* pages/chat/chat.wxss */

.page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  background: #e5e5e5;
  overflow: hidden;
  box-sizing: border-box;
}

.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #e5e5e5;
  border-bottom: 1rpx solid #d0d0d0;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.menu-icon, .add-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.nav-right {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.debug-btn {
  font-size: 32rpx;
  color: #666;
  padding: 10rpx;
}

.chat-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #e5e5e5;
  min-height: 0;
}

.messages {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 20rpx 30rpx 80rpx;
  background: #e5e5e5;
  height: 0;
  min-height: 0;
  box-sizing: border-box;
}

.welcome-message {
  background: #f0f0f0;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.welcome-text {
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}

.message {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  max-width: calc(100vw - 120rpx);
  box-sizing: border-box;
}

.message.user {
  align-items: flex-end;
}

.message.user .message-content {
  background: #f0f0f0;
  color: #333;
  border-radius: 20rpx 20rpx 5rpx 20rpx;
  max-width: calc(100% - 40rpx);
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
}

.message.assistant {
  align-items: flex-start;
}

.message.assistant .message-content {
  background: #f0f0f0;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 5rpx;
  max-width: calc(100% - 40rpx);
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
}

.message-content {
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-word;
  white-space: pre-wrap;
  overflow-wrap: break-word;
  max-width: 100%;
  box-sizing: border-box;
}

.teacher-card {
  background: white;
  border-radius: 20rpx;
  margin: 20rpx 0;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  position: relative;
  width: 100%;
  max-width: calc(100vw - 120rpx);
  box-sizing: border-box;
}

.teacher-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
  overflow: hidden;
}

.teacher-basic {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.teacher-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.teacher-title {
  font-size: 24rpx;
  color: #666;
  font-weight: normal;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.teacher-actions {
  display: flex;
  gap: 20rpx;
  flex-shrink: 0;
}

.star-icon, .share-icon {
  width: 60rpx;
  height: 60rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.teacher-content {
  padding: 30rpx;
}

.teacher-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 15rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.research-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 15rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.loading {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #999;
}

.loading-spinner {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.input-area {
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background: #e5e5e5;
  border-top: 1rpx solid #d0d0d0;
  box-sizing: border-box;
}

.input-area.with-action-bar {
  padding-bottom: 10rpx;
}

.input-container {
  flex: 1;
  display: flex;
  align-items: flex-end;
  background: white;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  min-height: 80rpx;
  max-height: 200rpx;
  box-sizing: border-box;
}

.message-input {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.5;
  border: none;
  outline: none;
  background: transparent;
  min-height: 40rpx;
  max-height: 160rpx;
  resize: none;
  word-wrap: break-word;
  word-break: break-all;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  flex-shrink: 0;
}

.send-btn.disabled {
  background: #ccc;
}

.selection-mode .teacher-card {
  padding-left: 60rpx;
}

.selection-checkbox {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.selection-checkbox.checked {
  background: #007aff;
  border-color: #007aff;
}

.checkbox-icon {
  color: white;
  font-size: 16rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 100;
}

.action-bar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  color: white;
  font-size: 24rpx;
}

.action-icon {
  font-size: 36rpx;
}

.action-text {
  font-size: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
